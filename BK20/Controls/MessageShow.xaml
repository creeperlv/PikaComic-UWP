<UserControl
    x:Class="BK20.MessageShow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BK20"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <BeginStoryboard x:Name="_In">
            <Storyboard>
                <FadeInThemeAnimation TargetName="grid_GG" ></FadeInThemeAnimation>
            </Storyboard>
        </BeginStoryboard>
        <BeginStoryboard x:Name="_Out">
            <Storyboard>
                <FadeOutThemeAnimation TargetName="grid_GG" ></FadeOutThemeAnimation>
            </Storyboard>
        </BeginStoryboard>
    </UserControl.Resources>
    <!--<Grid>-->
        <Border x:Name="grid_GG" Height="auto" Visibility="Collapsed" VerticalAlignment="Top" CornerRadius="10" HorizontalAlignment="Center" Background="#7F000000" >
            <TextBlock x:Name="txt_GG" Foreground="White" VerticalAlignment="Center" Margin="10,5">
				<Run Text="信息"/>
            </TextBlock>
        </Border>
    <!--</Grid>-->
</UserControl>
